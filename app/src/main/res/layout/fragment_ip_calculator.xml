<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:tag="tutorial_menu"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:nestedScrollingEnabled="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="IP Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="32dp"
            android:hint="IP Address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/subnetMask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ip"
            android:layout_marginTop="31dp"
            android:hint="Subnet Mask" />

        <EditText
            android:id="@+id/highAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/subnetMask"
            android:layout_marginTop="27dp"
            android:hint="High Address" />

        <EditText
            android:id="@+id/lowAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/highAddress"
            android:layout_marginTop="27dp"
            android:hint="Low Address" />

        <EditText
            android:id="@+id/broadcastAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lowAddress"
            android:layout_marginTop="27dp"
            android:hint="Broadcast Add" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Calculate"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/broadcastAdd"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>