<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/default_padding_half"
    android:layout_marginStart="@dimen/default_padding_half"
    android:layout_marginTop="@dimen/default_padding_half"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rlTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_simple_item_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:orientation="vertical"
            android:padding="@dimen/tag_space"
            android:paddingBottom="@dimen/default_padding_half"
            android:paddingLeft="@dimen/default_padding_half"
            android:paddingRight="@dimen/default_padding_half">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxLength="250"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_padding_half"
                    android:layout_marginStart="@dimen/default_padding_half"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tagWin7"
                style="@style/AppTheme.TextView.Tag"
                android:background="@drawable/tag_win7"
                android:text="@string/win7" />


            <TextView
                android:id="@+id/tagWin8"
                style="@style/AppTheme.TextView.Tag"
                android:background="@drawable/tag_win8"
                android:text="@string/win8" />


            <TextView
                android:id="@+id/tagWin10"
                style="@style/AppTheme.TextView.Tag"
                android:background="@drawable/tag_win10"
                android:text="@string/win10" />


            <TextView
                android:id="@+id/tagUbuntu"
                style="@style/AppTheme.TextView.Tag"
                android:background="@drawable/tag_ubuntu"
                android:text="@string/ubu" />


            <TextView
                android:id="@+id/tagTopology"
                style="@style/AppTheme.TextView.Tag"
                android:background="@drawable/tag_topo"
                android:text="@string/topo" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
