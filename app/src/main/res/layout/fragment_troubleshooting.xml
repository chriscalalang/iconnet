<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/troubleshooting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:tag="troubleshooting_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Troubleshooting"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/win7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:enabled="true"
            android:text="WIndows 7"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            />

        <Button
            android:id="@+id/win8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="WIndows 8"
            android:layout_below="@+id/win7"
            android:layout_alignLeft="@+id/win7"
            android:layout_alignStart="@+id/win7"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/win10"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="WIndows 10"
            android:layout_below="@+id/win8"
            android:layout_alignLeft="@+id/win8"
            android:layout_alignStart="@+id/win8"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/ubuntu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Ubuntu"
            android:layout_below="@+id/win10"
            android:layout_alignLeft="@+id/win10"
            android:layout_alignStart="@+id/win10"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="10dp"/>

        <!--&lt;!&ndash;<android.support.v7.widget.RecyclerView&ndash;&gt;-->
        <!--&lt;!&ndash;android:id="@+id/recycler_view"&ndash;&gt;-->
        <!--&lt;!&ndash;android:background="#f7fbf7"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_marginBottom="1dp"/>&ndash;&gt;-->


    </RelativeLayout>

</android.support.v7.widget.CardView>